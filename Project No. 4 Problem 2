#include <iostream>
#include <string>
using namespace std;

char c;

void display() {
	cout << "Enter a sentence: ";
}
void displaySentence() {
	cout << "Output: ";
}
void displayChar() {
	cout << c;
}
void input() {
	cin.get(c);
}


int main() {
	_asm {
		call display;
	read:
		call input;

		cmp c, '.';
		je done;
		cmp c, 'a';
		je toUppercase;
		cmp c, 'e';
		je toUppercase;
		cmp c, 'i';
		je toUppercase;
		cmp c, 'o';
		je toUppercase;
		cmp c, 'u';
		je toUppercase;

		call displayChar;
		jmp read;


	toUppercase:
		sub c, 32;
		call displayChar;
		jmp read;

	done:
		
	}
	cout << endl;
	system("pause");
	return 0;
}

//NATHAN'S CODE
#include <iostream>
#include <string>

using namespace std;

char c;
string newSentence = "";

void display() {
	cout << "Enter a sentence: ";
}

void displaySentence() {

	cout << "Output: " << newSentence << endl;
}

void readChar() {
	cin.get(c);
}

void toUpper() {
	c = toupper(c);
}

void appendC() {
	newSentence += c;
}

int main() {

	_asm {
		call display;

	read:
		call readChar;	//Read a character from the sentence

		cmp c, '.';		//If it's a period, jump to end
		je done;		//Else compare all vowels
		cmp c, 'a';		//If there is a vowel, jump toUpperCase
		je toUppercase;
		cmp c, 'e';
		je toUppercase;
		cmp c, 'i';
		je toUppercase;
		cmp c, 'o';
		je toUppercase;
		cmp c, 'u';
		je toUppercase;	//If none are vowels, call appendC to add the letter to the c string
		call appendC;
		jmp read;

	toUppercase:
		call toUpper;	//Capitalizes the vowel
		call appendC;	//Adds the letter to the c string
		jmp read;		//Jump back to read

	done:
		call appendC;	//Adds the period to the end of the sentence
		call displaySentence;
	}

	system("pause");
	return 0;
}





