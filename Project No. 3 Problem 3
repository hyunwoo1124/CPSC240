#include <iostream>
#include <string>
using namespace std;

string name = "";
int age = 0;
char gender;

void printName() {
	cout << "Enter your name: ";
	cin >> name;
}
void printAge() {
	cout << name << " ,how old are you? ";
	cin >> age;
}
void printGender() {
	cout << name << " , what is your gender(m/f)? ";
	cin >> gender;
}
void FemaleTeen() {
	cout << "Hi " << name << " ,you are a female teenager\n";
}
void NotFemaleTeen() {
	cout << "Hi " << name << ", you are not a female teenager\n";
}

int main() {

	_asm {
		call printName;
		mov eax, name;		//eax = name;


	checkAge:
		call printAge;
		mov ebx, age;		//ebx = age;
		cmp ebx, 13;
		jl notFTeen;
	check19:				// check if greater than 19 if so jump to notFTeen
		cmp ebx, 19;
		jg notFTeen;
	checkGender:			// check gender, if not 'F' jump to notFTeen
		call printGender;
		mov al, gender;		//al = gender;
		cmp gender, 'F';
		jne notFTeen;
	femaleTeen:				// if not anything else you are female teen
		call FemaleTeen;
		jmp cont;
	checkf:					// if not 'f' jump to notFTeen
		cmp gender, 'f';
		jne notFTeen;
	notFTeen:
		call NotFemaleTeen;
	cont:


	
	}
	system("pause");
	return 0;
}
