/*
Description:
	This project reads the character of y and n and display how many times the character was used.
	for example:
			Enter a string of votes: yyn
				y vote = **
				n vote = *
*/
#include <iostream>
#include <string>
using namespace std;

char vote;
int countYes = 0;
int countNo = 0;
string yesStar = "";
string noStar = "";

void display() {
	cout << "Enter a string of votes: ";
}
void readYesNo() {

	if (vote == 'y') {
		yesStar += "* ";
		countYes++;
	}
	if (vote == 'n') {
		noStar += "* ";
		countNo++;
	}
	cin.get(vote);

}

void displayAnswer() {
	cout << "No. of Yes: " << countYes << " " << yesStar << endl;
	cout << "No. of No: " << countNo << " " << noStar << endl;
}

int main() {
	_asm {
		call display;
	read:
		cmp vote, '\n';			// if a user enter it finishes
		je cont;
		cmp vote, 'y';
		jne No;
	Yes:
		call readYesNo;
		jmp read;
	No:
		cmp vote, 'n';
		call readYesNo;
		jmp read;
	cont:
		call displayAnswer;
	}
	
	
	system("pause");
	return 0;
}


