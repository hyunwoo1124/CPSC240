/*
Description:
	This project reads the character of y and n and display how many times the character was used.
	for example:
			Enter a string of votes: yyn
				y vote = **
				n vote = *
*/

//KEVIN'S CODE

#include <iostream>
#include <string>
using namespace std;

char vote;
int countYes = 0;
int countNo = 0;
string yesStar = "";
string noStar = "";

void display() {
	cout << "Enter a string of votes: ";
}
void readYesNo() {

	if (vote == 'y') {
		yesStar += "* ";
		countYes++;
	}
	if (vote == 'n') {
		noStar += "* ";
		countNo++;
	}
	cin.get(vote);

}

void displayAnswer() {
	cout << "No. of Yes: " << countYes << " " << yesStar << endl;
	cout << "No. of No: " << countNo << " " << noStar << endl;
}

int main() {
	_asm {
		call display;
	read:
		cmp vote, '\n';			// if a user enter it finishes
		je cont;
		cmp vote, 'y';
		jne No;
	Yes:
		call readYesNo;
		jmp read;
	No:
		cmp vote, 'n';
		call readYesNo;
		jmp read;
	cont:
		call displayAnswer;
	}
	
	
	system("pause");
	return 0;
}





//NATHAN'S CODE
#include <iostream>
#include <string>

using namespace std;

char c;
string newSentence = "";

void display() {
	cout << "Enter a sentence: ";
}

void displaySentence() {

	cout << "Output: " << newSentence << endl;
}

void readChar() {
	cin.get(c);
}

void toUpper() {
	c = toupper(c);
}

void appendC() {
	newSentence += c;
}

int main() {

	_asm {
		call display;

	read:
		call readChar;	//Read a character from the sentence

		cmp c, '.';		//If it's a period, jump to end
		je done;		//Else compare all vowels
		cmp c, 'a';		//If there is a vowel, jump toUpperCase
		je toUppercase;
		cmp c, 'e';
		je toUppercase;
		cmp c, 'i';
		je toUppercase;
		cmp c, 'o';
		je toUppercase;
		cmp c, 'u';
		je toUppercase;	//If none are vowels, call appendC to add the letter to the c string
		call appendC;
		jmp read;

	toUppercase:
		call toUpper;	//Capitalizes the vowel
		call appendC;	//Adds the letter to the c string
		jmp read;		//Jump back to read

	done:
		call appendC;	//Adds the period to the end of the sentence
		call displaySentence;
	}

	system("pause");
	return 0;
}
